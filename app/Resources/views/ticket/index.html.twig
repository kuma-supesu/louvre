{% extends 'layout.twig' %}

{% block body %}
    <h1>Tickets list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Fname</th>
                <th>Lname</th>
                <th>Birthday</th>
                <th>Country</th>
                <th>Reduc</th>
                <th>Day</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td><a href="{{ path('crud_ticket_show', { 'id': ticket.id }) }}">{{ ticket.id }}</a></td>
                <td>{{ ticket.fname }}</td>
                <td>{{ ticket.lname }}</td>
                <td>{% if ticket.birthday %}{{ ticket.birthday|date('Y-m-d') }}{% endif %}</td>
                <td>{% if ticket.country %}{{ ticket.country|join(', ') }}{% endif %}</td>
                <td>{% if ticket.reduc %}Yes{% else %}No{% endif %}</td>
                <td>{% if ticket.day %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('crud_ticket_show', { 'id': ticket.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
