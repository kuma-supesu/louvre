                                        <p>{{ error }}</p>
                                    {% endfor %}
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% block javascripts %}
{{ parent() }}
    <script src="{{ asset('js/bootstrap-datepicker.js')}}"></script>
	<script>
        $(document).ready(function() {
            $('.js-datepicker').datepicker({
                format: "dd/mm/yy",
                weekStart:1,
                startDate: "days",
                maxViewMode: 1,
                orientation: "top auto",
                multidate: false,
                daysOfWeekDisabled: "2",
                autoclose: true,
                todayHighlight: true,
                datesDisabled: ['01/05/2019', '01/11/2019', '25/12/2019'],
                toggleActive: true
            });
        });
	</script>
{% endblock %}
{% endblock %}